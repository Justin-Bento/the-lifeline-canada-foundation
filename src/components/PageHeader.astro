---
const { title, overview, media } = Astro.props;
// overview can be an array of strings
---

<section class="grid items-center grid-cols-2 gap-16">
  <div class="col-span-2 lg:col-span-1 max-w-4xl text-balance">
    {title && <h1 class="landing-headline">{title}</h1>}

    {
      overview && Array.isArray(overview)
        ? overview.map((section, index) => (
            <p
              key={index}
              class="mt-4 text-base leading-7 text-black text-balance"
            >
              {section}
            </p>
          ))
        : overview && (
            <p class="mt-4 text-base leading-7 text-black text-balance">
              {overview}
            </p>
          )
    }
  </div>

  {
    media && (
      <div class="col-span-2 lg:col-span-1">
        <img
          src={media?.path}
          alt={media?.overview ?? title}
          class="landing-media"
        />
      </div>
    )
  }
</section>

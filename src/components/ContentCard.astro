---
const { url, title, description, type, thumbnail } = Astro.props;
// Title =
// Description =
// Sample =
// Media =
---

<a
  href={url}
  class="block group p-6 border border-gray-800 rounded-lg cursor-pointer hover:bg-gray-50 transition-all"
>
  <img
    src={thumbnail.src}
    alt={thumbnail.alt}
    class="w-full aspect-video bg-gray-600 rounded-xl mb-4"
  />
  <span class="flex flex-col-reverse">
    <h5
      class="mt-1 text-lg font-semibold tracking-tight leading-7 capitalize group-hover:underline"
    >
      {title}
    </h5>
    <p class="text-sm text-violet-700">{type}</p>
  </span>
  <p class="leading-6 mt-2 line-clamp-3">
    {description}.
  </p>
</a>

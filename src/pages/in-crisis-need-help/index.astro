---
import Card from "../../components/Card.astro";
import Layout from "../../layouts/Layout.astro";
import { in_crisis, in_crisis_page_info } from "../../lib/data";
---

<Layout>
  <section class="grid items-center grid-cols-2 gap-16 mt-16">
    <div class="max-w-4xl col-span-2 lg:col-span-1 text-balance">
      <h1
        class="text-black leading-loose text-4xl font-semibold tracking-tight text-balance lg:leading-[1.1] lg:font-semibold xl:text-5xl xl:tracking-tight"
      >
        {in_crisis_page_info.heading}
      </h1>

      {
        in_crisis_page_info.overview.map((paragraph: string) => (
          <p class="mt-4 text-base leading-7 text-black text-balance">
            {paragraph}
          </p>
        ))
      }
    </div>
    <div class="col-span-2 lg:col-span-1">
      <img
        src={in_crisis_page_info.media.path}
        alt={in_crisis_page_info.media.description}
        class="landing-media"
      />
    </div>
    <div class="col-span-2 p-6 bg-violet-300 rounded-xl">
      <p class="text-base leading-7">
        When clicking 3rd party links, you will be redirected to websites not
        affiliated to, but with the underlying support of The LifeLine Canada
        Foundation.
      </p>
    </div>
  </section>
  <section class="grid grid-cols-1 gap-16 md:grid-cols-2 lg:grid-cols-3">
    <Card
      title={in_crisis.canada.title}
      overview={in_crisis.canada.overview}
      url_path="in-crisis-need-help"
    />
    <Card
      title={in_crisis.united_states.title}
      overview={in_crisis.united_states.overview}
      url_path="in-crisis-need-help"
    />
    <Card
      title={in_crisis.international.title}
      overview={in_crisis.international.overview}
      url_path="in-crisis-need-help"
    />
  </section>
</Layout>

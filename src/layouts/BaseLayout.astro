import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>The LifeLine Canada Foundation</title>
  </head>
  <body>
    <Navigation />
    <main class="wrapper min-h-dvh py-6">
      <section class="grid grid-cols-2 items-center gap-16 mt-16">
        <div class="col-span-2 lg:col-span-1 max-w-4xl text-balance">
          <h1
            class="text-black leading-loose text-4xl font-semibold tracking-tight text-balance lg:leading-[1.1] lg:font-semibold xl:text-5xl xl:tracking-tight"
          >
            Mental Health Resources At Your Fingertips!
          </h1>
          <p class="text-black text-base text-balance sm:text-lg mt-4">
            Do you or someone you care about struggle with thoughts of suicide
